@page "/Gifts"
@model WishlistIndexModel
@{
    ViewData["Title"] = "Lista de Presentes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">🎁 Lista de Presentes</h2>
    
    @if (User.IsInRole("Admin"))
    {
        <button class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#createGiftModal">
            ➕ Adicionar Presente
        </button>
    }
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card shadow-sm h-100 position-relative">
                @if (User.IsInRole("Admin"))
                {
                    <div class="position-absolute top-0 end-0 p-2 d-flex gap-1">
                        <button type="button" class="btn btn-sm btn-outline-secondary btn-edit-gift"
                                data-item-id="@item.Id">
                            ✏️
                        </button>

                        <button class="btn btn-sm btn-outline-danger"
                                title="Remover"
                                onclick="onDeleteClick('@item.Id')">
                            🗑️
                        </button>
                    </div>
                }

                <img src="@item.ProductImageUrl"
                     class="card-img-top"
                     alt="@item.Name"
                     style="object-fit: cover; height: 200px;" />

                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>

                    <p class="card-text text-muted">
                        @item.Description
                    </p>

                    @if(item.IsActive == 1){
                        <span class="badge bg-success">
                            Disponível
                        </span>
                    } 
                    else
                    {
                        <span class="badge bg-danger">
                            Indisponível
                        </span>
                    }
                    
                    @if(item.Category == 1)
                    {
                        <span class="badge bg-info text-dark">
                            Casa
                        </span>
                    }

                    @if(item.Category == 2)
                    {
                        <span class="badge bg-primary">
                            Casamento
                        </span>
                    }

                    @if (item.Category == 3)
                    {
                        <span class="badge bg-warning text-dark">
                            Lua de Mel
                        </span>
                    }

                </div>

                <div class="card-footer bg-white border-0">
                    <a href="/Details/@item.Id"
                       class="btn btn-outline-primary w-100">
                        Ver detalhes
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateGiftsModal")
@await Html.PartialAsync("_EditGiftsModal")

@section Scripts {    
    <script>
        const gifts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Items));
        window.gifts = gifts;
    </script>

    <script src="/js/pages/wedding/gifts.js"></script>
    <script src="/js/pages/wedding/_editGiftsModal.js"></script>
}
