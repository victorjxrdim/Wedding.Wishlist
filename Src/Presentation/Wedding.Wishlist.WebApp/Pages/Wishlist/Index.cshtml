@page "/presentes"
@model WishlistIndexModel
@{
    ViewData["Title"] = "Lista de Presentes";
}

<h2 class="mb-4">🎁 Lista de Presentes</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="Presente">

                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Description</p>

                    <span class="badge badge-available">Disponível</span>
                </div>

                <div class="card-footer bg-white border-0">
                    <a asp-page="/Wishlist/Details"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-primary w-100">
                        Ver detalhes
                    </a>
                </div>
            </div>
        </div>
    }
</div>
