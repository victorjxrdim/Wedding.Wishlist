<div class="modal fade" id="editGiftModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">✏️ Editar Presente</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Fechar">
                </button>
            </div>

            <div class="modal-body">
                <form id="editGiftForm">
                    <input type="hidden" name="id" value="" />

                    <div class="mb-3">
                        <label class="form-label">Nome</label>
                        <input class="form-control" name="name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descrição</label>
                        <textarea class="form-control" name="description" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Categoria</label>
                        <select class="form-select" name="category" required>
                            <option value="" disabled selected>Selecione uma categoria</option>
                            <option value="1">Casa</option>
                            <option value="2">Viagem</option>
                            <option value="3">Lua de Mel</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Link da Imagem</label>
                        <input class="form-control" name="imageLink" type="url" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Link do Produto</label>
                        <input class="form-control" name="productLink" type="url" required />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnEditGiftSave" class="btn btn-primary">Salvar</button>
            </div>

        </div>
    </div>
</div>
