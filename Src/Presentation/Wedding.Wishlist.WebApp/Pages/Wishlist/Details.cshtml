@page "/Details/{wishlistId}"
@model WishlistDetailsModel
@{
    ViewData["Title"] = "Detalhes";
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.Item.ProductImageUrl" class="img-fluid rounded shadow-sm" />
    </div>

    <div class="col-md-6">
        <h2>@Model.Item.Name</h2>
        <p class="text-muted">@Model.Item.Description</p>

        <button class="btn btn-primary btn-lg mt-3"
                id="@Model.Item.Id"
                data-bs-toggle="modal"
                data-bs-target="#choosePresentModal">
            Escolher este presente 💖
        </button>
    </div>
</div>

@await Html.PartialAsync("_ChoosePresentModal")

@section Scripts {
    <script src="~/js/pages/wedding/_choosePresentModal.js"></script>
}
