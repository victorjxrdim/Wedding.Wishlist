@page "/presentes/{id}"
@model WishlistDetailsModel
@{
    ViewData["Title"] = "Detalhes";
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.Item.ImageUrl" class="img-fluid rounded shadow-sm" />
    </div>

    <div class="col-md-6">
        <h2>@Model.Item.Name</h2>
        <p class="text-muted">@Model.Item.Description</p>

        <button class="btn btn-primary btn-lg mt-3">
            Escolher este presente 💖
        </button>
    </div>
</div>
