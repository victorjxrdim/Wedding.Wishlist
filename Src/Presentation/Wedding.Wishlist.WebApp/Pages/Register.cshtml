@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="auth-card">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <h3 class="auth-title text-center mb-3">Criar Conta</h3>
            <p class="text-muted text-center mb-4">
                Crie sua conta para participar da lista 💕
            </p>

            <form id="registerUser">
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input id="name" name="name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input id="email" name="email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Senha</label>
                    <input id="password" name="password" type="password" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirmar Senha</label>
                    <input id="confirmPassword" type="password" class="form-control" />
                </div>

                <button type="button" class="btn btn-primary w-100 mt-3" onclick="submitRegister()">
                    Criar conta
                </button>
            </form>

            <div class="text-center mt-4">
                <small>
                    Já tem conta?
                    <a class="auth-link" href="/Login">Entrar</a>
                </small>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js"></script>
}
