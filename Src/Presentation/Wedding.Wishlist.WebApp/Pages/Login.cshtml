@page "/Login"
@model LoginModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="auth-card">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <h3 class="auth-title text-center mb-3">Entrar</h3>
            <p class="text-muted text-center mb-4">
                Acesse sua conta para gerenciar a lista 💍
            </p>

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">
                    Entrar
                </button>
            </form>

            <div asp-validation-summary="All" class="text-danger mt-3"></div>

            <div class="text-center mt-4">
                <small>
                    Não tem conta?
                    <a class="auth-link" asp-page="/Register">Criar agora</a>
                </small>
            </div>

        </div>
    </div>
</div>
